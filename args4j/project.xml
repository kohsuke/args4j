<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <name>args4j</name>
  <id>args4j</id>
  <currentVersion>2.0</currentVersion>
  
  <organization>
    <name>Kohsuke Kawaguchi</name>
    <url>http://www.kohsuke.org/</url>
    <logo>http://sourceforge.net/sflogo.php?group_id=91437</logo>
  </organization>
  
  <logo>/images/args4j.png</logo>
  <inceptionYear>2003</inceptionYear>
 
  <package>org.kohsuke.args4j</package>
  
  
  <shortDescription>args4j : Java command line arguments parser</shortDescription>
  <!--gumpRepositoryId>javanettasks</gumpRepositoryId-->

  <description>args4j : Java command line arguments parser</description>
  
  <url>http://args4j.sf.net/</url>

  <cvsWebUrl>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/args4j/</cvsWebUrl>
  <cvsModule>args4j</cvsModule>
  <issueTrackingUrl>http://sourceforge.net/tracker/?group_id=91437</issueTrackingUrl>

  <siteAddress>www.kohsuke.org</siteAddress>
  <siteDirectory>/home/kohsuke/mainwebsite_html/args4j</siteDirectory>


  <repository>
    <connection>scm:cvs:pserver:anonymous@cvs.sourceforge.net:/cvsroot/args4j:args4j</connection>
    <developerConnection>scm:cvs:ext:${maven.username}@cvs.sourceforge.net:/cvsroot/args4j:args4j</developerConnection>
    <url>http://cvs.sourceforge.net/cgi-bin/viewcvs.cgi/args4j/</url>
  </repository>
   
  <mailingLists>
    <mailingList>
      <name>discussion list</name>
      <subscribe    >args4j-users-subscribe@lists.sourceforge.net</subscribe>
      <unsubscribe>args4j-users-unsubscribe@lists.sourceforge.net</unsubscribe>
      <archive>http://sourceforge.net/mailarchive/forum.php?forum=args4j-users</archive>
    </mailingList>
  </mailingLists>

  
  <developers>
    <developer>
      <name>Kohsuke Kawaguchi</name>
      <id>kohsuke</id>
      <email>kk@kohsuke.org</email>
      <organization>Sun Microsystems</organization>
    </developer>
  </developers>
  
  <dependencies>
    <dependency>
      <id>ant</id>
      <version>1.5</version>
    </dependency>
    <!--dependency>
      <id></id>
      <version></version>
    </dependency-->
  </dependencies>
  
  <build>
    <nagEmailAddress>kk@kohsuke.org</nagEmailAddress>
    
    <sourceDirectory>src</sourceDirectory>
    <unitTestSourceDirectory>test</unitTestSourceDirectory>

    <!-- Resources that are packaged up inside the JAR file -->
    <resources>
      <resource>
        <directory>src</directory>
        <includes>
          <include>**/*.properties</include>
          <include>META-INF/services/*</include>
        </includes>
      </resource>
    </resources>
    
    <!-- Unit test classes -->
    <unitTest>
      <includes>
        <include>**/Test*.java</include>
      </includes>
    </unitTest>
  </build>
  
  <reports>
    <report>maven-changelog-plugin</report>
    <report>maven-changes-plugin</report>
    <report>maven-developer-activity-plugin</report>
    <report>maven-file-activity-plugin</report>
    <report>maven-javadoc-plugin</report>
    <report>maven-license-plugin</report>
    <!--report>maven-pmd-plugin</report-->
    <!--report>maven-tasklist-plugin</report-->
  </reports>
</project>
